<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterPage1"
    android:orientation="vertical">

    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-23dp"
        android:background="@drawable/ellipse_126" />

    <View
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-99dp"
        android:background="@drawable/ellipse_127" />

    <View
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-109dp"
        android:background="@drawable/ellipse_128" />


    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="38dp"
        android:layout_above="@+id/bottomButtons"
        android:layout_below="@+id/ellipse_127">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="90px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your allergens and dive in to a world of allergy free!"
            android:textColor="@color/sub_header_color"
            android:fontFamily="@font/sf_pro_rounded_medium"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="850px"
            android:layout_marginTop="50px"
            android:paddingBottom="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Milk" />

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eggs" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Fish" />

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peanut" />

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Soybean" />

                <CheckBox
                    android:id="@+id/checkbox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shellfish" />

                <CheckBox
                    android:id="@+id/checkbox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Wheat" />

                <CheckBox
                    android:id="@+id/checkbox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sesame" />

                <CheckBox
                    android:id="@+id/checkbox9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Tree Nut" />
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/registerButton"
            android:layout_width="248dp"
            android:layout_height="60dp"
            android:layout_margin="50px"
            android:layout_marginStart="50px"
            android:layout_marginTop="50px"
            android:layout_marginEnd="50px"
            android:layout_marginBottom="50px"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:text="CONTINUE"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/sf_pro_rounded_medium"
            android:text="Already have an account? Login"
            android:textColor="@color/gray_color_1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        android:orientation="vertical"
        android:paddingHorizontal="100px"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/line_login_with" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:fontFamily="@font/sf_pro_rounded_medium"
                android:text="Sign Up With"
                android:textColor="@color/gray_color_1"
                android:textSize="30px" />

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/line_login_with" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/facebookOAuthButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="57dp"
                    android:background="@drawable/rectangle_oauth"
                    android:elevation="37.17dp"
                    android:paddingHorizontal="15dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/FBIconImageView"
                        android:layout_width="38dp"
                        android:layout_height="39dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/facebook_logo" />

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/FBIconImageView"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="FACEBOOK"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/googleOAuthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="57dp"
                    android:background="@drawable/rectangle_oauth"
                    android:elevation="37.17dp"
                    android:paddingHorizontal="15dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/googleIconImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/google_logo" />

                    <!-- Text -->
                    <TextView
                        android:id="@+id/textTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/googleIconImageView"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="GOOGLE"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>