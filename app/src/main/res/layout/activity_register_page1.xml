<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterPage1"
    android:orientation="vertical">

    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-23dp"
        android:background="@drawable/ellipse_126" />

    <View
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-99dp"
        android:background="@drawable/ellipse_127" />

    <View
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="298dp"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="-109dp"
        android:background="@drawable/ellipse_128" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="38dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:fontFamily="@font/sf_pro_rounded_bold"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="90px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Allos! Please complete the registration and dive in to a world of allergy free"
            android:textColor="#9586A8"
            android:textSize="45px" />

        <ScrollView
            android:layout_width="500px"
            android:layout_height="900px"
            android:layout_margin="50px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Milk" />

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eggs" />

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Fish" />

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peanut" />

                <CheckBox
                    android:id="@+id/checkbox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Soybean" />

                <CheckBox
                    android:id="@+id/checkbox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shellfish" />

                <CheckBox
                    android:id="@+id/checkbox7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Wheat" />

                <CheckBox
                    android:id="@+id/checkbox8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sesame" />

                <CheckBox
                    android:id="@+id/checkbox9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8DD"
                    android:text="Tree Nut" />
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/registerButton"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_margin="50px"
            android:backgroundTint="#0BCE83"
            android:text="Register" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login Here"
            android:textSize="50px" 
            android:clickable="true"
            android:focusable="true"/>


    </LinearLayout>


</RelativeLayout>