                        <RelativeLayout
                android:id="@+id/facebookOAuthButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="57dp"
                    android:background="@drawable/rectangle_oauth"
                    android:elevation="37.17dp"
                    android:paddingHorizontal="15dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/FBIconImageView"
                        android:layout_width="38dp"
                        android:layout_height="39dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/facebook_logo" />

                    <!-- Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/FBIconImageView"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="FACEBOOK"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/googleOAuthButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="57dp"
                    android:background="@drawable/rectangle_oauth"
                    android:elevation="37.17dp"
                    android:paddingHorizontal="15dp">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/googleIconImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/google_logo" />

                    <!-- Text -->
                    <TextView
                        android:id="@+id/textTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/googleIconImageView"
                        android:fontFamily="@font/sf_pro_rounded_medium"
                        android:text="GOOGLE"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>