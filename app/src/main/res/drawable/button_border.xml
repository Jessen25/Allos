<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="15dp" /> <!-- You can adjust the radius as needed -->
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- You can adjust the color of the border -->
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="8dp" /> <!-- You can adjust the radius as needed -->
            <stroke
                android:width="2dp"
            android:color="@android:color/darker_gray" /> <!-- You can adjust the color of the shadow -->
        </shape>
    </item>
</layer-list>
