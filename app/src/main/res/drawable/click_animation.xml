<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius for the desired corner roundness -->
            <solid android:color="#80CCCCCC" /> <!-- Semi-transparent gray color -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius for the desired corner roundness -->
            <solid android:color="#00000000" /> <!-- Transparent color -->
        </shape>
    </item>
</selector>